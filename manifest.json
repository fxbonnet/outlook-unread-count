{
  "name": "Unread count for Outlook",
  "manifest_version": 2,
  "version": "1.3",
  "description": "A Chrome plugin to display Outlook unread messages count on the tab.",
  "icons": { "128": "icon.png" },
  "content_scripts": [
    {
      "matches": ["https://*/owa/*", "https://*.outlook.com/*", "https://*.office.com/*"],
      "js": ["unread-count-for-outlook.js"]
    }
  ],
  "permissions": ["tabs", "https://*/owa/*", "https://*.outlook.com/*", "https://*.office.com/*"]
}